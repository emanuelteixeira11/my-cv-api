<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity Project.
    -->
    <changeSet id="20190620130606-1" author="jhipster">
        <createTable tableName="project">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="short_description" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="long_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="start_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="end_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="profissional_experience_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20190620130606-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/data/project.csv"
                  separator=";"
                  tableName="project">
            <column name="id" type="numeric"/>
            <column name="short_description" type="string"/>
            <column name="long_description" type="string"/>
            <column name="start_date" type="date"/>
            <column name="end_date" type="date"/>
        </loadData>
    </changeSet>

    <changeSet id="20190620130606-1-relations" author="jhipster">

        <createTable tableName="project_technology">
            <column name="technology_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="project_id, technology_id" tableName="project_technology"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
